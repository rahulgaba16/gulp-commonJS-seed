{
  "globals": {
    "myModule": true
  },
  "env": {
    "browser": true,
    "node": true,
    "es6": true
  },
  "rules": {
    "no-unused-vars": 1,
    "eqeqeq": 1,
    "curly": 1,
    "no-undef": 1,
    "strict": 1,
    "no-unused-vars": 1,
    "no-use-before-define": 1,
    "no-var": 1,
    "prefer-arrow-callback": 1,
    "prefer-template": 1,
    "dot-notation": 1,
    "yoda": 1,
    "no-mixed-spaces-and-tabs": 2
  },
  "ecmaFeatures": {
    "modules": true,
    "ecmaVersion": 6,
    "sourceType": "module"
  },
  "globals": {
    "angular": true,
    "$": true,
    "_": true,
    "Vue": true,
    "Modernizr": true
  }
}
